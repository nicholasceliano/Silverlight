<UserControl x:Class="RadControlsSilverlightClient.Banks"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:RadControlsSilverlightClient"
		mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="480">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid x:Name="LayoutRoot" >
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
              
        <telerik:RadDataServiceDataSource x:Name="dataServiceDataSource" 
										  AutoLoad="True"  
										  QueryName="Banks" Margin="320,21,320,193">
            <telerik:RadDataServiceDataSource.DataServiceContext>
                <local:MyTreasuryDocsEntities />
            </telerik:RadDataServiceDataSource.DataServiceContext>
        </telerik:RadDataServiceDataSource>
       
            <telerik:RadDataServiceDataSource x:Name="ContactsdataServiceDataSource" 
										  AutoLoad="True"  
										  QueryName="Contacts" Margin="320,21,320,193">
            <telerik:RadDataServiceDataSource.DataServiceContext>
                <local:MyTreasuryDocsEntities />
            </telerik:RadDataServiceDataSource.DataServiceContext>
        </telerik:RadDataServiceDataSource>

        <telerik:RadDataServiceDataSource x:Name="AccountsdataServiceDataSource" 
										  AutoLoad="True"  
										  QueryName="Accounts" Margin="320,21,320,193">
            <telerik:RadDataServiceDataSource.DataServiceContext>
                <local:MyTreasuryDocsEntities />
            </telerik:RadDataServiceDataSource.DataServiceContext>
        </telerik:RadDataServiceDataSource>

            <!--<telerik:RadButton telerik:StyleManager.Theme="Windows7" Content="Export" x:Name="exportButton" Click="RadButton_Click" Grid.Row="0" Width="100"/>-->
<telerik:RadBusyIndicator  telerik:StyleManager.Theme="Metro" x:Name="busyIndicator" Grid.Row="0"  IsBusy="{Binding IsBusy, ElementName=dataServiceDataSource}" BusyContent="Loading data....">

                <telerik:RadGridView  telerik:StyleManager.Theme="Windows7" SelectionChanged="RadGridView1_SelectionChanged" AutoGenerateColumns="False" IsReadOnly="True" x:Name="RadGridView1" ItemsSource="{Binding DataView, ElementName=dataServiceDataSource}" Height="340"  Width="975"
                             CanUserFreezeColumns="True" RowIndicatorVisibility="Collapsed"  Margin="20,0" DataContext="{Binding}"  Grid.Row="0" Foreground="Black">
            <telerik:RadGridView.Columns>

                <telerik:GridViewDataColumn DataMemberBinding="{Binding bankID_pk}" Header="Bank ID" />
                <telerik:GridViewDataColumn DataMemberBinding="{Binding name}" Header="Bank Name" />
                <telerik:GridViewDataColumn DataMemberBinding="{Binding abanum}" Header="ABA Number" />
                <telerik:GridViewDataColumn DataMemberBinding="{Binding notes}" Header="Notes" />
                <telerik:GridViewDataColumn DataMemberBinding="{Binding active}" Header="Active" />
                <telerik:GridViewDataColumn DataMemberBinding="{Binding modifieddate}" Header="Date Modified" />
                <telerik:GridViewDataColumn DataMemberBinding="{Binding modifiedby}" Header="Modified By" />
                <telerik:GridViewDataColumn DataMemberBinding="{Binding createddate}" Header="Date Created" />
                <telerik:GridViewDataColumn DataMemberBinding="{Binding createdby}" Header="Created By" />

            </telerik:RadGridView.Columns>

        </telerik:RadGridView>
            </telerik:RadBusyIndicator>
            <!--<telerik:RadDataPager telerik:StyleManager.Theme="Windows7" Grid.Row="1"
								   x:Name="radDataPager1"
								   PageSize="10" BorderThickness="1,0,1,1"
								   Source="{Binding  Items, ElementName=RadGridView1}"
								   DisplayMode="All"
                                   Width="975"/>-->

            <telerik:RadBusyIndicator  telerik:StyleManager.Theme="Metro" x:Name="busyIndicatorForm" Grid.Row="2"  IsBusy="{Binding IsBusy, ElementName=dataServiceDataSource}" BusyContent="Loading data....">

                <telerik:RadDataForm telerik:StyleManager.Theme="Windows7" CommandButtonsVisibility="Add, Edit, Navigation, Commit, Cancel" AutoGenerateFields="False" EditEnding="myRadDataForm_EditEnding"  AutoCommit="True" Loaded="myRadDataForm_Loaded" x:Name="myRadDataForm" ItemsSource="{Binding DataView, ElementName=dataServiceDataSource}"  Header="BANK DETAILS" Grid.Row="1" MaxWidth="975" Width="Auto" Height="800">
            <telerik:RadDataForm.EditTemplate>
                <DataTemplate>
                    <StackPanel>
                        <telerik:DataFormDataField DataMemberBinding="{Binding name,Mode=TwoWay}" Label="Bank Name:"  IsEnabled="True" />
                        <telerik:DataFormDataField DataMemberBinding="{Binding abanum,Mode=TwoWay}" Label="ABA Number:" IsEnabled="True" />
                        <telerik:DataFormDataField DataMemberBinding="{Binding notes,Mode=TwoWay}" Label="Notes:" IsEnabled="True" />
                        <telerik:DataFormCheckBoxField DataMemberBinding="{Binding active,Mode=TwoWay}" Label="Active:" IsEnabled="True" />
                    </StackPanel>
                </DataTemplate>
            </telerik:RadDataForm.EditTemplate>
            <telerik:RadDataForm.NewItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <telerik:DataFormDataField DataMemberBinding="{Binding name,Mode=TwoWay}" Label="Bank Name:" IsEnabled="True" />
                        <telerik:DataFormDataField DataMemberBinding="{Binding abanum,Mode=TwoWay}" Label="ABA Number:" IsEnabled="True" />
                        <telerik:DataFormDataField DataMemberBinding="{Binding notes,Mode=TwoWay}" Label="Notes:" IsEnabled="True" />
                        <telerik:DataFormCheckBoxField DataMemberBinding="{Binding active,Mode=TwoWay}" Label="Active:" IsEnabled="True" />
                    </StackPanel>
                </DataTemplate>
            </telerik:RadDataForm.NewItemTemplate>
            <telerik:RadDataForm.ReadOnlyTemplate>
                <DataTemplate>
                    <StackPanel>
                        <telerik:DataFormDataField DataMemberBinding="{Binding name,Mode=TwoWay}" Label="Bank Name:"  IsEnabled="True" />
                        <telerik:DataFormDataField DataMemberBinding="{Binding abanum,Mode=TwoWay}" Label="ABA Number:" IsEnabled="True" />
                        <telerik:DataFormDataField DataMemberBinding="{Binding notes,Mode=TwoWay}" Label="Notes:" IsEnabled="True" />
                        <telerik:DataFormCheckBoxField DataMemberBinding="{Binding active,Mode=TwoWay}" Label="Active:" IsEnabled="True" />
                        <telerik:DataFormDataField DataMemberBinding="{Binding modifieddate,Mode=TwoWay}" Label="Date Modified:" IsEnabled="True" />
                        <telerik:DataFormDataField DataMemberBinding="{Binding modifiedby,Mode=TwoWay}" Label="Modified By:" IsEnabled="True" />
                        <telerik:DataFormDataField DataMemberBinding="{Binding createddate,Mode=TwoWay}" Label="Date Created:" IsEnabled="True" />
                        <telerik:DataFormDataField DataMemberBinding="{Binding createdby,Mode=TwoWay}" Label="Created By:" IsEnabled="True" />
                        <!--get all contacts for selected bank-->
                        <telerik:RadMenuItem IsSeparator="True" telerik:StyleManager.Theme="Windows7"></telerik:RadMenuItem>
                        <TextBlock Margin="10" Text="BANK CONTACTS:" FontWeight="Bold"/>
                        <telerik:RadGridView telerik:StyleManager.Theme="Windows7" AutoGenerateColumns="False" ItemsSource="{Binding  Path=DataView,  ElementName=ContactsdataServiceDataSource}"  Height="150" MaxWidth="975" Width="Auto"
                             CanUserFreezeColumns="False" RowIndicatorVisibility="Collapsed"> 
                        <telerik:RadGridView.Columns>
                        <telerik:GridViewDataColumn DataMemberBinding="{Binding firstname}" Header="First Name" />
                            <telerik:GridViewDataColumn DataMemberBinding="{Binding lastname}" Header="Last Name" />
                            <telerik:GridViewDataColumn DataMemberBinding="{Binding title}" Header="Title" />
                            <telerik:GridViewDataColumn DataMemberBinding="{Binding email}" Header="Email" />
                            <telerik:GridViewDataColumn DataMemberBinding="{Binding phone}" Header="Phone" />
                            <telerik:GridViewDataColumn DataMemberBinding="{Binding fax}" Header="Fax" />
                            <telerik:GridViewDataColumn DataMemberBinding="{Binding active}" Header="Active" />
                            <telerik:GridViewDataColumn DataMemberBinding="{Binding isPrimary}" Header="isPrimary" />
                                    </telerik:RadGridView.Columns>
                        </telerik:RadGridView>
                        <TextBlock Margin="10" Text="BANK ACCOUNTS:" FontWeight="Bold"/>
                        <telerik:RadGridView telerik:StyleManager.Theme="Windows7" AutoGenerateColumns="False" ItemsSource="{Binding  Path=DataView,  ElementName=AccountsdataServiceDataSource}"  Height="220" MaxWidth="975" Width="Auto" 
                             CanUserFreezeColumns="False" RowIndicatorVisibility="Collapsed">
                            <telerik:RadGridView.Columns>
                                <telerik:GridViewDataColumn DataMemberBinding="{Binding accountID_pk}" Header="Account Number" />
                                <telerik:GridViewDataColumn DataMemberBinding="{Binding name}" Header="Account Name" />
                                <telerik:GridViewDataColumn DataMemberBinding="{Binding active}" Header="Active" />
                            </telerik:RadGridView.Columns>
                        </telerik:RadGridView>
                    </StackPanel>
                </DataTemplate>
            </telerik:RadDataForm.ReadOnlyTemplate>
        </telerik:RadDataForm>
            </telerik:RadBusyIndicator>
        </Grid>
    </ScrollViewer>
</UserControl>